{% extends 'base.html.twig' %}

{% block title %} Mes Commandes de !{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        {% for flashError in app.flashes('error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}
        <h1 data-aos="fade-right">Je passe ma commande</h1>
        <hr>

        <div class="container">
            <div class="col-md-6">
                {% set formHtml  %}
                    {{ form_start(form, {action:path('order_recap')}) }}
                    {{ form_end(form) }}
                {% endset %}
                {{ (formHtml|replace({'[br]' : '<br/>'}))|raw }}
            </div>
            <div class="col-md-6">
                <h3>RÃ©capitulatif de ma commande</h3>
                {% for product in basket %}
                    <div class="container">
                        <div class="col-2">
                            <img src="{{vich_uploader_asset(product.jeuxvideo, 'imageFile')}}" alt="{{product.jeuxvideo.name}}" height="75px;" width="80px" />
                        </div>
                        <div class="col-8">{{product.jeuxvideo.name}}</div>
                        <div class="col-2">{{product.quantity}}</div>
                    </div>
                {% endfor %}
                <a href="">Payer</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script src="{{asset('build/app.js')}}"></script>

    <script>
    window.addEventListener('DOMContentLoaded', function() {
        AOS.init();
    });

    </script>
{% endblock %}