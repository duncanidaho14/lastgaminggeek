{% extends 'base.html.twig' %}

{% block title %}Platform index{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1>Platform index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Image</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for platform in platforms %}
                <tr>
                    <td>{{ platform.id }}</td>
                    <td>{{ platform.name }}</td>
                    <td><img src="{{ platform.imageFile }}" alt="{{ platform.name }}"></td>
                    <td>
                        <a href="{{ path('platform_show', {'id': platform.id}) }}">show</a>
                        <a href="{{ path('platform_edit', {'id': platform.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucune plateforme</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('platform_new') }}">Create new</a>
    </div>
</div>
    
{% endblock %}
