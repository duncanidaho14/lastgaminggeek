{% extends 'base.html.twig' %}

{% block title %}Mon compte - Gaminggeek!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <h1 data-aos="fade-right">Mon compte</h1>
            <br>
            <img src="{{vich_uploader_asset(user, 'imageFile')}}" alt="image de {{user.pseudo}}" class="image-pseudo">
            <h2>Que voulez vous faire <span style='color: #3299FF;'>{{app.user.pseudo}} </span>?</h2>
            <br>
            <section>
                <div class="row">
                    <div class="col-4">
                        <div class="card" data-aos="fade-right">
                            <div class="card-header">
                                <h3>Mes commandes</h3>
                            </div>
                            <div class="card-body" style="overflow: hidden;">
                                <h4 class="card-title">{{user.pseudo}}</h4>
                                <p class="card-text">{{user.firstName}} {{user.lastName}}</p>
                                <a href="{{path('account_order')}}" class="btn btn-primary">Mes commandes de jeux vidéo</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="card" data-aos="fade-down">
                            <div class="card-header">
                                <h3>Mes jeux</h3>
                            </div>
                            <div class="card-body">
                                <h4 class="card-title">{{user.pseudo}}</h4>
                                <p class="card-text">{{user.firstName}} {{user.lastName}}</p>
                                <a href="{{path('jeuxvideo')}}" class="btn btn-primary">Mes jeux vidéo en vente</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="card" data-aos="fade-left">
                            <div class="card-header">
                                <h3>Mes adresses</h3>
                            </div>
                            <div class="card-body">
                                <h4 class="card-title">{{user.pseudo}}</h4>
                                <p class="card-text">Mes adresses connues</p>
                                <a href="{{path('account_address')}}" class="btn btn-primary">Mes adresses</a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <section>
                <br>
                <h2>Votre email : {{user.email}}</h2>
                <h2>Votre compte a été crée le  : {{user.createdAt|date("m/d/Y H:i")}}</h2>
                <h2>Votre compte a été modifié le  : {{user.updatedAt|date("m/d/Y H:i")}}</h2>
            </section>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{asset('build/app.js')}}"></script>

    <script>
    window.addEventListener('DOMContentLoaded', function() {
        AOS.init();
    });

    </script>
{% endblock %}