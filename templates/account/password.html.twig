{% extends 'base.html.twig' %}

{% block title %}Mon compte - Gaminggeek!{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <br>
        <h1 data-aos="zoom-out-right" class="change-password-title">Changer mon mot de passe</h1>
        <br>
        <h2>Changez votre mot de passe <strong>{{app.user.pseudo}}</strong> !</h2>
        <br>

        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
        <div>
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                    retourner au près de nos jeux vidéo
                    <a href="{{path('accueil')}}">Jeux vidéo</a>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script src="{{asset('build/app.js')}}"></script>

    <script>
    window.addEventListener('DOMContentLoaded', function() {
        AOS.init();
    });

    </script>
{% endblock %}